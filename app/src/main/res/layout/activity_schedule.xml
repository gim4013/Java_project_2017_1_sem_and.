<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.myapplication.schedule">

    <Button
        android:id="@+id/schedule_add"
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:text="ADD schedule"
        android:onClick="onClicked_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="8dp" />
    <Button
        android:id="@+id/schedule_check"
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:text="CHECK schedule"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/schedule_add" />
    <Button
        android:id="@+id/schedule_delete"
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:text="DELETE schdule(Latest)"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/schedule_check" />
</LinearLayout>
