<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.myapplication.schedule_add">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TableRow>


            <Button
                android:id="@+id/button_date"
                android:layout_width="78dp"
                android:layout_height="50dp"
                android:onClick="onClicked_date"
                android:text="Date" />
            <TextView
                 android:id="@+id/textView1"
                 android:layout_width="300dp"
                 android:layout_height="50dp">
            </TextView>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/button_time"
                android:layout_width="78dp"
                android:layout_height="50dp"
                android:onClick="onClicked_time"
                android:text="Time" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="300dp"
                android:layout_height="50dp">
            </TextView>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="309dp"
            android:hint="insert your schedule"
            android:cursorVisible="false"></EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_save"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:onClick="onClicked_save"
                android:text="save"/>

            <Button
                android:id="@+id/button_goBack"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:onClick="onClicked_goBack"
                android:text="Back"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
